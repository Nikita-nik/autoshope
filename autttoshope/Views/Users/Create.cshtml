@model autttoshope.ViewModels.CreateUserViewModel
@{
    ViewData["Title"] = "Добавление пользователя";
}
<main>
    <div class="container-1">
        <div class="row" style="background-color:rgba(0,0,0,.6);margin-top:10rem; padding:2rem; text-align:center">
            <div class="container">
                <form asp-action="Create" asp-controller="Users">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label">Email</label>
                        <input type="text" asp-for="Email" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label">Пароль</label>
                        <input type="password" asp-for="Password" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Имя</label>
                        <input type="number" asp-for="Name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Surname" class="control-label">Фамилия</label>
                        <input type="number" asp-for="Surname" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Patronymic" class="control-label">Отчество</label>
                        <input type="number" asp-for="Patronymic" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input style="background-color:black; color:white" type="submit" value="Добавить" class="btn btn-outline-secondary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>
