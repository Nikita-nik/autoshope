@model Car
@{
    ViewData["Title"] = "Запись на покупку машины";
}

<!DOCTYPE html>

<head>
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap-4.3.1/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/font-awesome-4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="~/css/additional.css" />
    </environment>
</head>

<main>
    <div class="row text fonts-style display-7 text-center" style="margin-top:3rem; padding:2rem; text-align:center">
        @if (User.Identity.IsAuthenticated)
        {
            <div class="row text fonts-style display-7 text-center" style="margin-top:5rem;background-color:rgba(0,0,0,0.2);padding:2rem; text-align:center">
                <div class="container 1" style="text-align:center">
                    <div class="row justify-content-md-center">
                        <div class="media-content col-md-10">
                            <h1 class="text fonts-style display-1 text-center">Покупка<br></h1>

                            <div class="form-group">
                                <label></label>
                                <input value="@(User.Identity.Name)" class="form-control" readonly="readonly" />
                            </div>
                            <hr class="line" style="width: 72%;">

                        </div>
                    </div>
                </div>
                <div class="row col-md-7">


                    <div class="form-group">
                        <label>Категория автомобиля</label>
                        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories" disabled></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="NameCar" class="control-label">Название машины</label>
                        <input style="font-family: Comic Sans MS" type="text" asp-for="NameCar" class="form-control" disabled />
                    </div>
                    <div class="form-group">
                        <label asp-for="NameCar" class="control-label">Название машины</label>
                        <input style="font-family: Comic Sans MS" type="text" asp-for="NameCar" class="form-control" disabled />
                    </div>
                    <div class="form-group">
                        <label asp-for="Color" class="control-label">Цвет</label>
                        <input style="font-family: Comic Sans MS" type="text" asp-for="Color" class="form-control" disabled />
                    </div>
                    <form method="post" asp-route-id="@ViewBag.id" ;>
                        <div class="form-group">
                            <label> name ="phone" </label>
                            <input name="phone" class="form-control" />
                        </div>
                        <input type="submit" class=" btn btn-outline-secondary display-4" value="Отправить" /><br />
                    </form>
                </div>
            </div>
        }
        else
        {
            <div class="container text fonts-style display-1" style="background-color:rgba(0,0,0,0.2);padding:2rem">
                <a style="color:white; margin-bottom:1rem;padding:0.5rem 3rem" asp-controller="Account" asp-action="Login">Вход</a>
                <a style="color:white; margin-bottom:1rem;padding:0.5rem 3rem" asp-controller="Account" asp-action="Register">Регистрация</a>
            </div>
        }
    </div>
</main>