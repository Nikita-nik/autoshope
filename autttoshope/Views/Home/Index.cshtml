@{
    ViewData["Title"] = "Главная";
}
    <main>
                @if (User.Identity.IsAuthenticated)
                {
                    <div id="carousel" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="slide_1" data-slide-to="0" class="active"></li>
                            <li data-target="slide_2" data-slide-to="1"></li>
                            <li data-target="slide_3" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="~/img/firstslidee.jpg" class="d-block w-100" height="600" alt="First slide" id="prozrach">
                                <div class="container">
                                    <div class="carousel-caption text-center">
                                        <h1><font color="dbdbdb">Новогодняя распродажа автомобилей ГАЗ 2019 года</font></h1>
                                        <p>Успей купить! Выгода до 300 000 руб!</p>
                                        <p><a class="btn btn-lg btn-primary" href="#" role="button">Переход на стр ГАЗа</a></p>
                                    </div>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <img src="~/img/111.jpg" class="d-block w-100" height="600" alt="Second slide">
                                <div class="container">
                                    <div class="carousel-caption text-left">
                                        <h1>Плановое ТО за пол цены</h1>
                                        <p>Акция до конца года</p>
                                        <p><a class="btn btn-lg btn-primary" href="#" role="button">переход</a></p>
                                    </div>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <img src="~/img/gazon.jpg" class="d-block w-100" height="600" alt="Third slide">
                                <div class="container">
                                    <div class="carousel-caption text-right">
                                        <h1>Контейнер</h1>
                                        <p>описание</p>
                                        <p><a class="btn btn-lg btn-primary" href="#" role="button">переход</a></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                }
                else
                {
                    <div class="container">
                        <a style="color:white" asp-controller="Account" asp-action="Login">Вход</a><br>
                        <a style="color:white" asp-controller="Account" asp-action="Register">Регистрация</a>
                    </div>
                }
        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>

        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/js/bootstrap.min.js" integrity="sha384-a5N7Y/aK3qNeh15eJKGWxsqtnX/wWdSZSKp+81YjTmS15nvnvxKHuzaWwXHDli+4" crossorigin="anonymous"></script>
    </main>