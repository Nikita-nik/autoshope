@model string

@{
    ViewData["Title"] = "Добавление ролей";
}
<main>
    <div class="container-1">
        <div class="row" style="background-color:rgba(0,0,0,.6);margin-top:10rem; padding:2rem; text-align:center">
            <div class="container">
                <div asp-validation-summary="All" class="text-danger"></div>
                <form asp-action="Create" method="post">
                    <div class="form-group">
                        <label for="name">Новая роль</label>
                        <input style="font-family: Comic Sans MS" name="name" class="form-control" />
                    </div>
                    <button type="submit" class="btn" style="background-color:black; height:3rem;color:white; padding:0.5rem 3rem">Добавить</button>
                </form>
            </div>
        </div>
    </div>
</main>